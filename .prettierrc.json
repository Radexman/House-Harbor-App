{
  "trailingComma": "es5",
  "singleQuote": true,
  "endOfLine": "auto",
  "semi": true,
  "tabWidth": 2,
  "plugins": ["prettier-plugin-tailwindcss"],
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "parser": "babel",
        "semi": true,
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "semi": false,
        "singleQuote": false,
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.html",
      "options": {
        "parser": "html",
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "printWidth": 120,
        "tabWidth": 2
      }
    },
    {
      "files": "*.jsx",
      "options": {
        "parser": "babel",
        "semi": true,
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2,
        "trailingComma": "es5",
        "jsxBracketSameLine": false
      }
    }
  ]
}
